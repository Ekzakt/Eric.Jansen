<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="format-detection" content="telephone=no">
        <meta name="title" content="Eric Jansen - Personal Website">
        <meta name="description" content="Eric Jansen | Personal Website | My Passion | Nothing much to see">
        <meta name="author" content="Eric Jansen">
        <title>@ViewData["Title"] - Eric Jansen</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/ericjansen.css" asp-append-version="true" />
    </head>

    <body>

        <div class="wrapper">

            <div class="content mb-4">

                <partial name="_GdprMessage" />

                <header>
                    <partial name="_Header" />
                </header>

                <div class="container mx-auto">
                    @RenderBody()
                </div>

            </div>

            <footer class="footer pt-3">
                <p>&copy; @DateTime.UtcNow.Year - 
                    <a href="/" title="Eric Jansen">Eric Jansen</a> - 
                    <a href="contact" title="Drop me a line">Drop me a line</a> -
                    <a href="privacy" title="Privacy policy">Privacy Policy</a>
                </p>
            </footer>

        </div>

        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
        <script src="~/js/js.cookie.min.js" asp-append-version="true"></script>
        <script src="~/js/ericjansen.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)

    </body>

</html>