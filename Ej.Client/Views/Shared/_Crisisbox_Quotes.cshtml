@using Ej.Karus.Extensions;

@model List<Quote>

@{
}

<div class="card karus_quotes">
    <div class="card-body">
        <h5 class="ps-4">
            Inspirational Quotes
            <i class="bi bi-fullscreen float-end" style="cursor: pointer;" role="link"></i>
            <i title="Refresh" class="bi bi-arrow-clockwise float-end me-2" role="link"></i>
        </h5>
        @if (Model?.Count > 0)
        {
            <ul>
                @foreach (var quote in Model)
                {
                    <li>
                        <i class="bi bi-quote"></i>
                        <span class="quote-text">@quote.Text</span>
                        <span class="quote-signature">@quote.GetSignature()</span>
                    </li>
                }
            </ul>
        }
    </div>
</div>
