@using Ej.Client.Configuration
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResource> _sharedLocalizer

<footer class="footer pt-5 pb-3">
    <p>
        &copy; @DateTime.UtcNow.Year - 
        <a asp-controller="Home" asp-action="Index" asp-route-culture="@CultureInfo.CurrentCulture.Name" title="@_tenantProvider.Tenant?.Name Home">@_tenantProvider.Tenant?.Name</a> - 
        <a asp-controller="Home" asp-action="Privacy" asp-route-culture="@CultureInfo.CurrentCulture.Name" title="@_sharedLocalizer["__NavItem_PrivacyPolicy"]">@_sharedLocalizer["__NavItem_PrivacyPolicy"]</a>
    </p>
</footer>
