@{
    Layout = "~/Views/Shared/_Karus_Layout_Fullscreen.cshtml";
    ViewBag.Title = "Inspirational Quotes";
}

@model List<Quote>

<div class="container-fluid karus_quotes">
    <div class="row g-5">
    @foreach (var quote in Model)
    {
        <div class="col col-6" style="width: 10%;">
            <i class="bi bi-quote"></i>
            <span class="quote-text">@quote.Text</span>
            <div class="quote-signature">@quote.GetSignature()</div>
        </div>
    }
    </div>
</div>
