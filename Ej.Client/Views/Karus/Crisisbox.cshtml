@model CrisisboxViewModel

<h2>@ViewData["Title"]</h2>
<p>@ViewData["SubTitle"]</p>

<section class="karus karus_crisisbox">

    <div class="container p-0">
        <div class="row g-3">
            <div class="col col-12 col-md-6">
                <partial name="_Crisisbox_MoneyCounter" />
            </div>
            <div class="col col-12 col-md-6">
                <partial name="_Crisisbox_EmergencyContacts" 
                         model="@Model.EmergencyContacts" />
            </div>
        </div>
        <div class="row g-3 mt-2">
            <div class="col col-12 col-md-6">
                <partial name="_Crisisbox_Spotify_Playlists" 
                         model="@Model.SpotifyMusic" />
            </div>
            <div class="col col-12 col-md-6">
                <partial name="_Crisisbox_Spotify_Playlists" 
                         model="@Model.SpotifyShows" />
            </div>
        </div>
        <div class="row g-3 mt-2">
            <div class="col col-12 col-md-6">
                <partial name="_Crisisbox_Quotes"
                         model="@Model.Quotes" />
            </div>
        </div>
    </div>

</section>
