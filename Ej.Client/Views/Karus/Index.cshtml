@{
    Layout = "~/Views/Shared/_Karus_Layout.cshtml";
}

@model List<OpdrachtItem>

<h1>Opdrachten</h1>

<section class="karus_tasks">

    <div class="container p-0">
        
        <div class="row g-4 row-cols-1 row-cols-lg-2">

            @foreach (var opdrachtItem in Model)
            {
                <div class="col">
                    <div class="card task">
                        <div class="row">
                            <div class="col-4 col-md-3 col-lg-4">
                                @if (!string.IsNullOrEmpty(opdrachtItem.CardImageUri))
                                {
                                    <img src="@opdrachtItem.CardImageUri" class="card-img img-fluid p-4" style="fill: red;" alt="@opdrachtItem.Name">
                                }
                            </div>
                            <div class="col-8 col-md-9 col-lg-8" style="margin-left: -2.6rem;">
                                <div class="card-body">
                                    <h5 class="card-title"><a class="stretched-link" asp-controller="Karus" asp-action="@opdrachtItem.ControllerAction" asp-route-culture="@CultureInfo.CurrentCulture.Name" title="@opdrachtItem.Name">@opdrachtItem.Name</a></h5>
                                    @if (!string.IsNullOrEmpty(opdrachtItem.Description))
                                    {
                                        <p class="card-text">@opdrachtItem.Description</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>